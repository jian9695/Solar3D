<!--
osgEarth Sample - EGM96
This example shows how to request an EGM96 vertical datum. Since there's no
heightfield layer, you will see the raw EGM96 geoid.
-->

<map version="2">   
    
    <image driver="gdal">
        <url>../data/world.tif</url>
    </image>
    
    <options>
        <profile>
            <srs>epsg:4326</srs>
            <vdatum>egm96</vdatum>
        </profile>
        <terrain>
            <lighting>false</lighting>
        </terrain>
    </options>
</map>